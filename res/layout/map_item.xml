<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/map_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/card.base_simple_title"
        android:text="Title" />

    <TextView
        android:id="@+id/map_item_street"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/map_item_recommend"
        android:textStyle="italic"
        android:text="Street" />

      

             <TextView
                 android:id="@+id/map_item_description"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_below="@+id/map_item_street"
               	 android:maxLines="1"
               	 android:ellipsize="end"
               	 android:singleLine="true"
               	 android:scrollHorizontally="false"
                 android:layout_gravity="center"/>

             <TextView
                 android:id="@+id/map_item_startDate"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_below="@+id/map_item_title"
                 android:textStyle="bold"
                 android:text="StartDate" />


    <TextView
        android:id="@+id/map_item_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_item_startDate"
        android:layout_marginRight="20dp"
        android:textColor="#03c03c"
        android:text="" />



<TextView
    android:id="@+id/map_item_cost"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/map_item_startDate"
    android:layout_toRightOf="@+id/map_item_recommend"
    android:layout_marginLeft="10dp"
    android:layout_alignParentRight="true"
    android:textColor="#03c03c"
       
    android:text="" />

</RelativeLayout>
