<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/map_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title" />

    <TextView
        android:id="@+id/map_item_street"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/map_item_title"
        android:text="Street" />

      

             <TextView
                 android:id="@+id/map_item_description"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_below="@+id/map_item_street"
               	 android:maxLines="1"
               	 android:ellipsize="end"
               	 android:singleLine="true"
               	 android:scrollHorizontally="false"
                 android:layout_gravity="center"/>

             <TextView
                 android:id="@+id/map_item_startDate"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_below="@+id/map_item_description"
                 android:text="StartDate" />

<LinearLayout
    android:id="@+id/map_item_recommend_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/map_item_startDate"
    android:layout_alignParentRight="true"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/map_item_thumbs_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="" />

    <TextView
        android:id="@+id/map_item_thumbs_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
</LinearLayout>

<TextView
    android:id="@+id/map_item_cost"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/map_item_recommend_container"
    android:layout_alignParentRight="true"
    android:text="" />

</RelativeLayout>
