<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="${relativePackage}.${activityClass}" >

        <FrameLayout
            android:id="@+id/miniMap"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TableLayout
            android:id="@+id/myTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/miniMap"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/table_round_shape"
            android:gravity="center_horizontal" >

            <TableRow>

                <LinearLayout
                    android:id="@+id/line8LL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ivTypeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:id="@+id/tvName"
                        style="@style/TextRegular"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:maxLines="2"
                        android:text="name" />

                    <View
                        android:id="@+id/spacer"
                        android:layout_width="20dp"
                        android:layout_height="1dp" />

                    <TextView
                        android:id="@+id/tvUpCount"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="7" />

                    <ImageButton
                        android:id="@+id/imageUp"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="20dp"
                        android:layout_height="27dp"
                        android:contentDescription="@string/contentDescription"
                        android:src="@drawable/voteup" />

                    <ImageButton
                        android:id="@+id/imageDown"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="20dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@string/contentDescription"
                        android:src="@drawable/votedown" />

                    <TextView
                        android:id="@+id/tvDownCount"
                        style="@style/TextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:text="3" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:background="#999" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/tvStart"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:background="#999" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/tvCreatedBy"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:text="dummy" />
            </TableRow>

            <TableRow>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:background="#999" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/tvCost"
                    style="@style/TextRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:text="$25" />
            </TableRow>

            <TableRow>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:background="#999" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/tvDescription"
                    style="@style/TextRegular"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:maxLines="10" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</ScrollView>